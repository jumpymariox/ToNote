/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

button.add-btn {
  display: flex;
  justify-content: center;
  align-content: center;
  position: fixed;
  right: 26rpx;
  bottom: 142rpx;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  background: #0cb1a1;
}

button.add-btn.button-hover {
  background: #03dac5
}

.weui-icon {
  margin-top: 24rpx;
}

.weui-tabbar>.weui-bar__item_on>.weui-tabbar__label {
  color: #03dac5
}